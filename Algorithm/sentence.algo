sentence = input("Enter a sentence and end with a period: ")

length = 0
words = 1
vowels = 0 

for i in sentence:
    if i == ".":
        break
    length = length + 1
    if i == " ":
        words = words + 1
    if i.lower() in ("a", "e", "i", "o", "u"):
        vowels = vowels + 1

print("Length of characters: ", length)
print("Number of words: ", words)
print("Number of vowels: ", vowels )